<div class="container">
    
    <form enctype="multipart/form-data" action="/home/create" method="post">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>  <!--view helper -->

  <div class="form-group">
    <textarea name="content" class ="form-control" id="exampleTextarea" rows="3"></textarea>
  </div>
  <div class="form-group">
    <input name="image" type="file" class="form-control-file" id="exampleInputFile" aria-describedby="fileHelp">
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
</form>
    
    <% @posts.each do |post| %>
    <p><%= post.content %></p>
    <p><%= image_tag post.image.url %></p>
    <p><%= image_tag post.image.url(:thumb) %></p>
    <% end %>
    
</div>